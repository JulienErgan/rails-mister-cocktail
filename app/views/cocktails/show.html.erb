<h1><%= @cocktail.name %></h1>

<ul>
<% @doses.each do |dose| %>
  <li> <%= dose.ingredient.name %> <%= dose.description %></li>
<% end %>
</ul>

<%= link_to 'Go back to list', cocktails_path %>
<%= link_to 'Add a dose', new_cocktail_doses_path(@cocktail) %>
<%= link_to 'Delete a dose', dose_path(@cocktail), method: :delete, data: { confirm: "Delete?"} %>
